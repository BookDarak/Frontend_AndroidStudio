<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/see_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="2"
                android:src="@drawable/back_button" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="        기록 보기"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_weight="6"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/button_delete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:src="@drawable/trash_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="10">


            <ImageView
                android:id="@+id/image_seereview_bookcover2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/book_sample" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_seereview_booktitle2"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="AI 인공지능 미래보고서2"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_seereview_isbn2"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/see_ratingbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="5"
                android:progressTint="#FFD179"
                android:isIndicator="true"
                android:stepSize="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:text="              읽은 날짜"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/see_startday2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/6/25 "
                    android:textSize="16dp"
                    android:textColor="@color/black"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ~ "
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/see_finishday2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023/6/30 "
                    android:textSize="16dp"
                    android:textColor="@color/black"/>





            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    서평"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 공개/비공개"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:id="@+id/textview_public_or2"

                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:id="@+id/text_review2"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    인상에 남는 구절"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:weightSum="10">


                <TextView
                    android:id="@+id/text_impressive2"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:letterSpacing="0.04"
                    />

            </LinearLayout>






            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/button_modify2"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="수정하기"
                    android:textSize="17sp"
                    android:background="@drawable/round"
                    app:backgroundTint="#A6AFFF"
                    android:layout_margin="10dp"/>

                <Button
                    android:id="@+id/button_ok2"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="확인"
                    android:textSize="17sp"
                    android:background="@drawable/round"
                    android:layout_margin="10dp"
                    app:backgroundTint="#A6AFFF" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>