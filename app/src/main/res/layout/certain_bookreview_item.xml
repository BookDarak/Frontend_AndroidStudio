<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/reviewbox"
    android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user_empty"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/certain_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="7dp"
                        android:text="유저아이디"
                        />

                        />
                    <ImageView
                        android:id="@+id/user_detail"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/vector2"
                        android:layout_marginTop="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/certain_review_createdDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰날짜"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/certain_item_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.5" />

                        <ImageView
                            android:id="@+id/thumbsup"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/thumbs_up"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/certain_likecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추천수" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/certain_review_content"
                        android:layout_width="265dp"
                        android:layout_height="40dp"
                        android:text="리뷰내용" />

                </LinearLayout>

            </LinearLayout>








        </LinearLayout>












    </RelativeLayout>







