<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#313234"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/user_empty" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="닉네임"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="닉네임을 입력하세요"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="이메일"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editText_id"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="이메일 주소를 입력하세요"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호(8~16자)"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/editText_password"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호 확인"
            android:layout_gravity="center"/>


        <EditText
            android:id="@+id/editText_passWord"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="비밀번호를 다시 한번 입력하세요"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="나이"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editText_age"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="나이를 입력하세요"
            android:inputType="number"
            android:textColor="@color/black" />

        <!-- 자기소개 입력 부분 추가 -->
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="자기소개"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/editText_introduction"
            android:layout_width="310dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="자기소개를 입력하세요"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:gravity="top" />



        <Button
            android:id="@+id/btn_join"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="가입하기"
            android:background="@drawable/round"
            android:textSize="17sp"
            app:backgroundTint="#A6AFFF" />
    </LinearLayout>
</ScrollView>
